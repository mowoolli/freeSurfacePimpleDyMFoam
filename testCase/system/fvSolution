    U
    {
        solver          PBiCG;
        smoother        GaussSeidel;
        tolerance       1e-06;
        relTol          0.01;
        minIter         1;
        preconditioner  DILU;
    }

    nuTilda
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-06;
        relTol          0.1;
        minIter         1;
    }

    zeta
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-06;
        relTol          0.01;
        nSweeps         1;
    }

    "(p|pcorr|pFinal)"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-06;
        relTol          0;
    }

    "(U|nuTilda|nut)Final"
    {
        $U;
        tolerance       1e-05;
        relTol          0;
    }
