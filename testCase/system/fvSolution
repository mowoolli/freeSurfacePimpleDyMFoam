PIMPLE
{
    momentumPredictor yes;
    nOuterCorrectors 1;
    nCorrectors     2;
    nNonOrthogonalCorrectors 0;
    correctPhi      yes;
    pRefCell        0;
    pRefValue       0;
    moveMeshOuterCorrectors yes;
    pRefPoint       (3 0.19 0.18);
}


SIMPLE
{
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;
}


solvers
{
